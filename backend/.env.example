# CareerPath AI Backend - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/careerpath-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Ollama AI Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=30000

# Mock AI Mode (set to true to bypass Ollama calls)
USE_MOCK_AI=false

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre email
SMTP_PASS=votre password
SMTP_FROM="Vehicle Rental <VotreEmail@gmail.com>"

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
